{
  "name": "concord-server",
  "private": true,
  "version": "5.0.0",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "test": "node --test 'tests/**/*.test.js' 'tests/**/*-tests.js'",
    "test:watch": "node --test --watch 'tests/**/*.test.js' 'tests/**/*-tests.js'",
    "test:coverage": "node --test --experimental-test-coverage tests/",
    "test:e2e": "node --test 'tests/e2e/**/*.test.js'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "migrate": "node migrate.js",
    "migrate:status": "node migrate.js --status",
    "smoke": "bash scripts/smoke.sh",
    "backup": "bash scripts/backup.sh",
    "restore": "bash scripts/restore.sh"
  },
  "dependencies": {
    "express": "^5.2.1",
    "cors": "^2.8.5",
    "dotenv": "^17.3.1",
    "ws": "^8.14.2",
    "socket.io": "^4.7.4",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^3.0.3",
    "zod": "^4.3.6",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "compression": "^1.7.4",
    "prom-client": "^15.1.0",
    "uuid": "^13.0.0",
    "stripe": "^20.3.1"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "@eslint/js": "^9.0.0",
    "globals": "^15.0.0"
  },
  "optionalDependencies": {
    "pg": "^8.11.3",
    "redis": "^5.11.0",
    "meilisearch": "^0.55.0",
    "better-sqlite3": "^12.6.2",
    "@xenova/transformers": "^2.15.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
