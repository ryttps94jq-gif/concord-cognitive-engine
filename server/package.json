{
  "name": "concord-server",
  "private": true,
  "version": "5.0.0",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "test": "node --test tests/",
    "test:e2e": "node --test tests/e2e/",
    "backup": "node -e \"import('./server.js').then(m => m.createBackup?.())\"",
    "restore": "node -e \"import('./server.js').then(m => m.restoreBackup?.(process.argv[2]))\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ws": "^8.14.2",
    "socket.io": "^4.7.4",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "zod": "^3.22.4",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "prom-client": "^15.1.0",
    "uuid": "^9.0.1"
  },
  "optionalDependencies": {
    "pg": "^8.11.3",
    "redis": "^4.6.12",
    "meilisearch": "^0.37.0",
    "better-sqlite3": "^9.4.3",
    "@xenova/transformers": "^2.15.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
